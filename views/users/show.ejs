<%- include('../partials/head.ejs') %>
<div id="container">
    <h2><%=currentUser.firstName%> <%=currentUser.lastName%>'s Shopping Cart</h2>
    <table>
        <thead>
            <th>Model</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
        </thead>
        <tbody>
        <% let total = 0; %>
        <% for(let i=0;i<user.shoppingCart.length;i++){ %>
            <tr>
                <td><%=user.shoppingCart[i].name%></td>
                <td>1</td>
                <td><%=user.shoppingCart[i].price%></td>
                <td><%=1 * user.shoppingCart[i].price%></td>
            </tr>
            <% total += user.shoppingCart[i].price %>
        <% } %>
        </tbody>
        <tr>
            <td id="table-total" colspan="3">TOTAL:</td>
            <td><%= total %></td>
        </tr>
    </table>
</div>
<%- include('../partials/foot.ejs') %>    
